{% extends 'base.html.twig' %}

{% block title %}Détails de la voiture{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('img/' ~ voiture.getimage()) }}" class="card-img img-fluid w-100" alt="Image de la voiture">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ voiture.getMarque() }} {{ voiture.getModele() }}</h5>
                        <p class="card-text">Année : {{ voiture.getAnnee() }}</p>
                        <p class="card-text">Prix : {{ voiture.getPrix() }}€</p>
                        <p class="card-text">Kilometre : {{ voiture.getKilometre() }} km</p>
                        <a href="{{ path('app_contact', {'modele': voiture.modele}) }}" class="btn btn-primary">Demandez plus d'informations sur ce véhicule</a>



                        <a href="{{ path('vehicule_occasion') }}" class="btn btn-primary">Retour à la liste des voitures</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

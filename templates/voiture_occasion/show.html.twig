{% extends 'base.html.twig' %}

{% block title %}Détails de la voiture{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div id="carouselExampleIndicators-{{ voiture.getId() }}" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                {% for image in voiture.images %}
                    <li data-bs-target="#carouselExampleIndicators-{{ voiture.getId() }}" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for image in voiture.images %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ asset('assets/img/' ~ image.getChemin) }}" class="d-block w-100 carousel-image" alt="...">
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators-{{ voiture.getId() }}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators-{{ voiture.getId() }}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">{{ voiture.getMarque() }} {{ voiture.getModele() }}</h5>
                <p class="card-text">Année : {{ voiture.getAnnee() }}</p>
                <p class="card-text">Prix : {{ voiture.getPrix() }}€</p>
                <p class="card-text">Kilométrage : {{ voiture.getKilometre() }} km</p>
                <p class="card-text">Caractéristiques : {{ voiture.getCaracteristiques }}</p>
                <p class="card-text">Equipements : {{ voiture.getEquipements }}</p>
                <a href="{{ path('app_contact', {'modele': voiture.getModele()}) }}" class="btn btn-primary">Demandez plus d'informations sur ce véhicule</a>
                <a href="{{ path('vehicule_occasion') }}" class="btn btn-primary">Retour à la liste des voitures</a>
            </div>
        </div>
    </div>
{% endblock %}
